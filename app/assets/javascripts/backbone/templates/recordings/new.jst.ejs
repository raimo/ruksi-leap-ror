<div class="container">

    <div class="box box-small pull-right">

        <form id="new-recording" name="recording">

          <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" class="form-control" value="<%= title %>">
          </div>

          <div class="form-group">
            <label for="content">Content:</label>
            <input type="text" name="content" id="content" class="form-control" value="<%= content %>">
          </div>

          <input type="submit" class="btn btn-default" value="Create Recording">

        </form>

    </div>

</div>