<div class="container">

    <div class="box box-small">

        <h1>Edit Recording</h1>

        <form id="edit-recording" name="recording">

            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" class="form-control" value="<%= title %>">
            </div>

            <div class="form-group hidden">
                <label for="content">Content:</label>
                <textarea name="content" id="content" class="form-control"><%= content %></textarea>
            </div>

            <div class="form-group">
                <span class="btn btn-default js-record-start"><span class="glyphicon glyphicon-record" aria-hidden="true"></span> Start Recording</span>
            </div>

            <div class="form-group">
                <span class="btn btn-default js-record-stop"><span class="glyphicon glyphicon-stop" aria-hidden="true"></span> Stop Recording</span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Update">
            </div>

        </form>

    </div>

</div>
