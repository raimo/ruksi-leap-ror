<div class="container">

    <div class="box box-small pull-right">

        <div class="preheading">Gesture:</div>

        <h1>
            <%= title %>
        </h1>

        <p>
            <% if (content) { %> <%= content.length %> <% } else { %> No content <% } %>
        </p>

        <% if (hasContent) { %>
            <% if (isPlaying) { %>
                <span class="btn btn-danger js-play" title="Play">
                    <span class="glyphicon glyphicon-stop" aria-hidden="true"></span> Stop
                </span>
            <% } else { %>
                <span class="btn btn-primary js-play" title="Play">
                    <span class="glyphicon glyphicon-play" aria-hidden="true"></span> Play
                </span>
            <% } %>
        <% } %>

        <a href="#/<%= id %>/edit" class="btn btn-default" title="Edit">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
        </a>

    </div>

</div>