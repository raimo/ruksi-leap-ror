<div class="container">

    <div class="box box-small">
        <div class="preheading">Recording:</div>
        <h1>
            <%= title %>
        </h1>
        <p>
            <% if (content) { %> <%= content.length %> <% } else { %> No content <% } %>
        </p>
        <span class="btn btn-default js-play" title="Play">
            <span class="glyphicon glyphicon-play" aria-hidden="true"></span> Play
        </span>
        <a href="#/<%= id %>/edit" class="btn btn-default" title="Edit">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
        </a>
    </div>

</div>